<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:title="Settings">
        <CheckBoxPreference 
            android:title="Shake Gesture"
            android:summary="Enable or Disable shake gesture "
            android:key="shaker_update" 
            android:defaultValue="false" 
            android:summaryOff="OFF" 
            android:summaryOn="ON"/>
        <CheckBoxPreference 
            android:summaryOn="ON"
             android:summaryOff="OFF" 
             android:key="gesture_update" 
             android:title="Swipe Gesture" 
             android:summary="Enable or disable swipe gesture" 
             android:defaultValue="false"/>
       	<CheckBoxPreference 
            android:summaryOn="ON"
             android:summaryOff="OFF" 
             android:key="backgroundimages_update" 
             android:title="Background Images" 
             android:summary="Enable or disable background images" 
             android:defaultValue="false"/>
    	<CheckBoxPreference 
            android:summaryOn="ON"
             android:summaryOff="OFF" 
             android:key="favsongs_update" 
             android:title="Favorite Songs" 
             android:summary="Enable or disable favorite songs playlist" 
             android:defaultValue="false"/>
    </PreferenceCategory>
    <!-- 
    <Preference android:title="Exit" android:summary="This will exit settings" android:key="Button"/>
     -->
    

</PreferenceScreen>
